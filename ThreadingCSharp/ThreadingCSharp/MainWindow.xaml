<Window x:Class="ThreadingCSharp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ThreadingCSharp"
        mc:Ignorable="d"
        Title="MainWindow" Height="317.495" Width="484.225">
    <Grid Margin="0,0,-3,0">
        <Button Content="Sync" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="SyncClick"/>
        <Border x:Name="ImageBorder" BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="260" Margin="186,12,0,0" VerticalAlignment="Top" Width="271">
            <Image x:Name="ImageBox" Margin="-1" Stretch="None" HorizontalAlignment="Right" Width="271" Height="260" VerticalAlignment="Bottom"/>
        </Border>
        <Button Content="Thread" HorizontalAlignment="Left" Margin="10,35,0,0" VerticalAlignment="Top" Width="75" Click="ThreadClick"/>
        <TextBlock x:Name="DurationText" HorizontalAlignment="Left" Margin="98,12,0,0" TextWrapping="Wrap" Text="-duration-" VerticalAlignment="Top"/>
        <Button Content="Thread 2" HorizontalAlignment="Left" Margin="10,60,0,0" VerticalAlignment="Top" Width="75" Click="Thread2Click"/>

    </Grid>
</Window>
